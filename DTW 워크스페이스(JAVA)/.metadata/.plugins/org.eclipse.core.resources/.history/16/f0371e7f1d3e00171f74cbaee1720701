import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;

public class Main {
	public static void main(String[] args) throws IOException {
		int num;
		
		//There were several ways of File handling ... so I did two kinds of them. (그냥 두개의 방법으로 파일입출력 한거)
		ArrayList<Character> arrayList = new ArrayList<Character>();
		String filename = "저장데이터.txt";
		FileInputStream fis = new FileInputStream("저장데이터.txt");
		BufferedReader reader = new BufferedReader(new InputStreamReader(fis));
		System.out.println("저장데이터");
		while ((num = reader.read()) != -1) {
			arrayList.add((char) num);
		}
		for (int i = 0; i < 10; i++) {
			System.out.println((char) arrayList.get(i));
		}
		reader.close();
		fis.close();

		
		
		ArrayList<Character> arrayList2 = new ArrayList<>();
		FileReader reader1 = new FileReader("체크.txt");
		System.out.println("체크");
		while ((num = reader1.read()) != -1) {
			arrayList2.add((char) num);
		}
		for (int i = 0; i < 10; i++) {
			System.out.println(arrayList2.get(i));
		}
		reader1.close();

		
		
		//(parameter)% of User's beat should be chosen to n1_sag
		float n1[] = new float[arrayList2.size()];
		float n2[] = new float[arrayList2.size()];
		float sagmentedN1[] = new float[n2.length];
		int sagSize = n1.length/n2.length;
		double parameter= 1.3;
		for (int i = 0; i < arrayList2.size(); i++) {
			n2[i] = arrayList2.get(i) - '0';
		}
		
		System.out.println("n2 길이 : "+n2.length+", 1.3하면 : "+n2.length*parameter);
		int i=0;
		while(sagSize>0){
			for(int j=0;j<n2.length*parameter;j++){
				sagmentedN1[j] = arrayList2.get(i) - '0';
				i++;
				
			sagSize--;
		}
		DTW dtw = new DTW(n1, n2);
		System.out.println(dtw.toString());
		

	}
}
